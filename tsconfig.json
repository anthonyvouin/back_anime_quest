{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipDefaultLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "target": "ES2016",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true
  },
  "include": [
    "./**/*"
  ],
  "exclude": ["node_modules", "dist"]
}